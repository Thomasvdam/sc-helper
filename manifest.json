{
	"manifest_version": 3,
	"name": "SoundCloud Helper",
	"description": "Collection of tools to make my SoundCloud experience better",
	"version": "1.0",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"js": ["highlight-sets.js"],
			"matches": ["https://soundcloud.com/*"],
			"run_at": "document_start"
		},
		{
			"js": ["xhr-interceptor.js"],
			"matches": ["https://soundcloud.com/*"],
			"run_at": "document_start",
			"world": "MAIN"
		}
	],
	"host_permissions": ["*://*.soundcloud.com/"],
	"permissions": ["storage", "cookies"],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}
